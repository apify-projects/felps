{
  "name": "@usefelps/root",
  "private": true,
  "engines": {
    "node": ">=17.8.0"
  },
  "devDependencies": {
    "@apify/eslint-config-ts": "^0.2.3",
    "@apify/tsconfig": "^0.1.0",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^7.0.0",
    "eslint-plugin-import": "^2.25.3",
    "is-ci": "^3.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.2"
  },
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "setup": "npm i yarn apify-cli -g && yarn set version 3.2.1 && yarn && yarn build",
    "prepare": "node ./scripts/configure-references.js",
    "clean": "yarn workspaces foreach -pti run clean",
    "scaffold": "node ./framework/cli/lib/scaffold.js",
    "build": "yarn workspaces foreach -iv --topological-dev --no-private run build",
    "dev:template": "yarn workspace @vobilela/framework-template run dev",
    "build:template": "yarn workspace @vobilela/framework-template run build",
    "dev:actors": "yarn workspace @vobilela/actor-main run dev",
    "build:actors": "yarn workspace @vobilela/actor-main run build",
    "build:agents": "yarn workspaces foreach -iv --topological-dev --from '@vobilela/agent-*' --no-private run build"
  },
  "packageManager": "^yarn@3.1.2"
}
