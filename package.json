{
  "name": "@usefelps/root",
  "private": true,
  "engines": {
    "node": ">=17.8.0"
  },
  "devDependencies": {
    "@apify/eslint-config-ts": "^0.2.3",
    "@apify/tsconfig": "^0.1.0",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^7.0.0",
    "eslint-plugin-import": "^2.25.3",
    "is-ci": "^3.0.1",
    "rimraf": "^3.0.2",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.2"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
